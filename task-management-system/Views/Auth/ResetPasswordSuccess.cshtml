@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Password Reset Successful";
    ViewData["MainTitle"] = "Password Reset Complete";
    ViewData["Tagline"] = "Your password has been successfully updated.";
}

<div class="auth-header text-center">
    <div class="success-icon">
        <i class="fas fa-check-circle" style="font-size: 4rem; color: #4CAF50;"></i>
    </div>

    <h2 class="mt-4">Password Reset Successful!</h2>
    <p class="text-muted">Your password has been successfully updated.</p>
    <p class="text-muted">You will be redirected to the login page shortly...</p>
</div>

<div class="text-center mt-4">
    <div class="redirect-timer">
        <p class="mb-3">Redirecting in <span id="countdown">5</span> seconds</p>
    </div>

    <div class="mt-4">
        <a asp-action="Login" class="auth-btn" style="display: inline-block; text-decoration: none;">
            <i class="fas fa-sign-in-alt me-2"></i>Go to Login Now
        </a>
    </div>
</div>

@section Scripts {
    <input type="hidden" id="redirectUrl" value="@Url.Action("Login", "Auth")" />
    <script src="~/js/webpages-js/reset-password-success.js" asp-append-version="true"></script>
}