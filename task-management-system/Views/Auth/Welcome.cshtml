@{
    ViewData["Title"] = "Welcome to Yeloe";
    Layout = "_DashboardLayout";
}

<link rel="stylesheet" href="~/css/auth/auth.css" asp-append-version="true" />

<div class="welcome-container">
    <div class="welcome-content">
        <div class="welcome-header">
            <img src="/images/logo/yeloe-logo.png" alt="Yeloe Logo" class="welcome-logo">
            <h1>Getting Started with Yeloe</h1>
            <p>Let's explore what you can do with your new task management system</p>
        </div>

        <div class="welcome-features">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-tasks"></i>
                </div>
                <h3>Create Tasks</h3>
                <p>Organize your work with smart task management and tracking</p>
            </div>

            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-folder-open"></i>
                </div>
                <h3>Manage Projects</h3>
                <p>Group your tasks into projects for better organization</p>
            </div>

        <div class="welcome-actions" style="text-align: center;">
            <a href="@Url.Action("Index", "Dashboard")" class="btn btn-primary welcome-btn">
                <i class="fas fa-rocket"></i>
                Start Using Yeloe
            </a>
        </div>
    </div>
</div>

@* Welcome Modal *@
@if (ViewBag.ShowWelcomeModal)
{
    <div class="welcome-modal-overlay" id="welcomeModalOverlay">
        <div class="welcome-modal">
            <div class="welcome-modal-icon">
                <i class="fas fa-check-circle"></i>
            </div>
            <h3>Welcome to Yeloe!</h3>
            <p>Hi <strong>@ViewBag.UserFirstName</strong>! Your account has been verified successfully.</p>
            <button type="button" class="welcome-modal-btn" id="welcomeModalBtn">
                Get Started
            </button>
        </div>
    </div>
}

@section Scripts {
    <script src="~/js/webpages-js/welcome.js" asp-append-version="true"></script>
}
