@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Password Reset Sent";
    ViewData["MainTitle"] = "Check Your Email";
    ViewData["Tagline"] = "We've sent you instructions to reset your password.";
}

<div class="auth-header">
    <h2><i class="fas fa-envelope-check" style="color: #4CAF50; font-size: 3rem;"></i></h2>
    <h2>Email Sent!</h2>
    <p>If an account with email <strong>@ViewBag.Email</strong> exists, you will receive password reset instructions.</p>
</div>

@if (ViewBag.Success != null)
{
    <div class="alert alert-success">
        @ViewBag.Success
    </div>
}

<div class="text-center">
    <p class="mb-3">Check your email and click the link to reset your password.</p>
    <p class="text-muted" style="font-size: 0.9rem;">
        The link will expire in 1 hour for security reasons.
    </p>
</div>

<div class="text-center mt-4">
    <p class="mb-0" style="font-size: 0.9rem;">
        Didn't receive the email? Check your spam folder or
        <a asp-action="ForgotPassword" class="auth-link">try again</a>
    </p>
</div>

<div class="text-center mt-3">
    <a asp-action="Login" class="auth-link">Back to Sign In</a>
</div>