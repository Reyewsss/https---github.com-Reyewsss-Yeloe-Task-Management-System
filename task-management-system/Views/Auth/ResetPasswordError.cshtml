@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Invalid Reset Link";
    ViewData["MainTitle"] = "Link Invalid";
    ViewData["Tagline"] = "This password reset link is no longer valid.";
}

<div class="auth-header">
    <h2><i class="fas fa-exclamation-triangle" style="color: #f44336; font-size: 3rem;"></i></h2>
    <h2>Invalid Reset Link</h2>
    @if (ViewBag.Error != null)
    {
        <p>@ViewBag.Error</p>
    }
</div>

<div class="alert alert-danger">
    The password reset link you clicked is either invalid or has expired. Please request a new password reset.
</div>

<div class="text-center mt-4">
    <a asp-action="ForgotPassword" class="auth-btn" style="display: inline-block; text-decoration: none;">
        <i class="fas fa-redo me-2"></i>Request New Reset Link
    </a>
</div>

<div class="text-center mt-4">
    <a asp-action="Login" class="auth-link">Back to Sign In</a>
</div>