@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Forgot Password";
    ViewData["MainTitle"] = "Forgot Password?";
    ViewData["Tagline"] = "Enter your email address and we'll send you a link to reset your password.";
}

@model task_management_system.ViewModels.ForgotPasswordViewModel

<link rel="stylesheet" href="~/css/webpages-css/forgot-password.css" asp-append-version="true" />

<div class="auth-header">
    <h2>Reset Your Password</h2>
    <p>Enter the email address associated with your account</p>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Error"]
    </div>
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @Html.ValidationSummary(false, "", new { @class = "mb-0" })
    </div>
}

<form asp-action="ForgotPassword" method="post" class="auth-form" id="forgotPasswordForm">
    <div class="form-group">
        <label asp-for="Email" class="form-label">Email Address</label>
        <input asp-for="Email" class="form-control" placeholder="Enter your email address" />
        <span asp-validation-for="Email" class="text-danger small"></span>
    </div>

    <button type="submit" class="auth-btn" id="sendResetBtn">
        <i class="fas fa-paper-plane me-2" id="btnIcon"></i>
        <span id="btnText">Send Reset Link</span>
    </button>
</form>

<div class="text-center mt-4">
    <p class="mb-0" style="font-size: 0.9rem;">
        Remember your password?
        <a asp-action="Login" class="auth-link">Back to Sign In</a>
    </p>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="~/js/webpages-js/forgot-password.js" asp-append-version="true"></script>
}