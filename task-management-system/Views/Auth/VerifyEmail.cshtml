@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Verify Email";
}

@model task_management_system.ViewModels.VerifyEmailViewModel

<div class="auth-header">
    <img src="/images/logo/yeloe-logo.png" alt="Yoloe Logo" class="auth-logo">
    <h2>Verify Your Email</h2>
    <p>We've sent a 6-digit verification code to <strong>@Model.Email</strong></p>
</div>

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-info">
        @ViewBag.Message
    </div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<form asp-action="VerifyEmail" method="post" class="auth-form">
    <input type="hidden" asp-for="Email" />

    <div class="form-group">
        <label asp-for="VerificationCode" class="form-label">Verification Code</label>
        <input asp-for="VerificationCode" class="form-control" placeholder="Enter 6-digit code" maxlength="6" />
        <span asp-validation-for="VerificationCode" class="text-danger small"></span>
    </div>

    <button type="submit" class="auth-btn">
        <i class="fas fa-check me-2"></i>Verify Email
    </button>
</form>

<div class="text-center mt-4">
    <p class="mb-2">Didn't receive the code?</p>
    <form asp-action="ResendVerificationCode" method="post" style="display: inline;">
        <input type="hidden" name="email" value="@Model.Email" />
        <button type="submit" class="btn btn-link p-0 auth-link">Resend verification code</button>
    </form>
</div>

<div class="text-center mt-4">
    <a asp-action="Register" class="auth-link">Back to Registration</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }   
    <script src="~/js/webpages-js/verify-email.js" asp-append-version="true"></script>
}